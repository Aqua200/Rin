export async function pluginConBotonDeCanal(m, { conn }) {
  // Texto principal del mensaje
  const mensaje = `¬°Hola, *${await conn.getName(m.sender)}*! üåü\n\n¬øQuieres ver nuestro canal oficial?`;

  // Env√≠a el mensaje con el bot√≥n "Ver canal"
  await conn.sendMessage(m.chat, {
    text: mensaje,
    footer: 'Presiona el bot√≥n para ver el canal',
    buttons: [
      { buttonId: 'idVerCanal', buttonText: { displayText: 'Ver canal' }, type: 1 }
    ],
    headerType: 1
  }, { quoted: m });

  // Manejar la respuesta del usuario
  conn.on('message', async (msg) => {
    if (msg.buttonId === 'idVerCanal') {
      // Env√≠a el enlace del canal cuando el usuario presiona el bot√≥n
      await conn.sendMessage(m.chat, { text: 'Aqu√≠ est√° el enlace a nuestro canal: https://chat.whatsapp.com/CanaldelGrupo' }, { quoted: msg });
    }
  });
}
